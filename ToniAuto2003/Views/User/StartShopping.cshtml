@using ToniAuto2003.Services.Client.Models;
@model ClientIndexModel

@{
    ViewBag.Title = "Start Shopping";
}

@if (!ViewData.ModelState.IsValid && ViewData.ModelState["Error"] != null)
{
        <div class="alert alert-danger" role="alert">
        @ViewData.ModelState["Error"].Errors.First().ErrorMessage
        </div>
}

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <div class="form-group">
                <label asp-for="amount"></label>
                <input asp-for="amount" class="form-control" placeholder="3000-250000">
                <span asp-validation-for="amount" class="small text-danger"></span>
            </div>
            <div class="text-center">
                <input class="btn btn-primary mt-3 " type="submit" value="Save" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}